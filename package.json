{
  "name": "codeloops",
  "version": "0.5.1",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "format": "prettier --write .",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:all": "npm run lint && npm run check-types",
    "setup": "bash scripts/setup.sh",
    "start": "npx -y tsx src",
    "start:http": "npx -y tsx src --http",
    "check-types": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "test-quickstart": "bash scripts/test-quickstart.sh"
  },
  "keywords": [
    "codeloops",
    "actor-critic",
    "ai",
    "coding-agent",
    "feedback-loop"
  ],
  "author": "Mat Silva <mat@silvabyte.com>",
  "license": "ISC",
  "description": "CodeLoops: A TypeScript-based feedback system to improve coding agents through actor-critic loops with integrated knowledge graph memory",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.27.0",
    "@types/node": "^22.15.31",
    "@types/proper-lockfile": "^4.1.4",
    "@voltagent/cli": "^0.1.7",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/azure": "^1.3.23",
    "@ai-sdk/openai": "^1.3.22",
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@tsconfig/node22": "^22.0.1",
    "@voltagent/core": "^0.1.36",
    "@voltagent/vercel-ai": "^0.1.12",
    "await-to-js": "^3.0.0",
    "chalk": "^5.4.1",
    "conf": "^14.0.0",
    "console-table": "^0.1.2",
    "env-paths": "^3.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "execa": "^9.5.2",
    "fastify": "^5.2.0",
    "nanoid": "^5.1.5",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "pino-roll": "^3.1.0",
    "prettier": "^3.5.3",
    "proper-lockfile": "^4.1.2",
    "table": "^6.9.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.64"
  }
