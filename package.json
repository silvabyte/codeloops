{
  "name": "codeloops",
  "version": "0.6.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "lint": "npx ultracite check",
    "lint:fix": "npx ultracite fix --unsafe",
    "typecheck": "tsc --build --noEmit",
    "prepare": "husky",
    "start": "npx -y tsx src",
    "start:http": "npx -y tsx src --http",
    "build:plugin": "bun run scripts/build-plugin.ts",
    "plugin:install": "bun run scripts/install-plugin.ts"
  },
  "keywords": [
    "codeloops",
    "memory",
    "ai",
    "coding-agent",
    "mcp",
    "opencode"
  ],
  "author": "Mat Silva <mat@silvabyte.com>",
  "license": "ISC",
  "description": "CodeLoops: Persistent memory layer for AI coding agents",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@opencode-ai/plugin": "^1.0.184",
    "@types/bun": "^1.3.5",
    "@types/node": "^22.15.3",
    "@types/proper-lockfile": "^4.1.4",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "ultracite": "^6.4.3",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@tsconfig/node22": "^22.0.1",
    "env-paths": "^3.0.0",
    "fastify": "^5.2.0",
    "nanoid": "^5.1.5",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "pino-roll": "^3.1.0",
    "proper-lockfile": "^4.1.2",
    "typescript": "^5.8.3",
    "zod": "^4.2.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  }
}
