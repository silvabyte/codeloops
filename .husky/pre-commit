#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run TypeScript type checking
echo "ğŸ“ Checking TypeScript types..."
bun run typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix the errors above."
  exit 1
fi

# Run ESLint
echo "ğŸ”§ Running ESLint..."
bun run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed. You can run 'bun run lint:fix' to auto-fix some issues."
  exit 1
fi

# Check Prettier formatting
echo "ğŸ’… Checking code formatting..."
bun run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting check failed. Run 'bun run format' to fix formatting."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
bun test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the failing tests."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"